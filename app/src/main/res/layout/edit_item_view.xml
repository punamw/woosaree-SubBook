<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding = "16dp">


    <!-- Overview category -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Label -->
        <TextView
            android:text="Subscription Name"
            android:paddingRight = "8dp"/>

        <!-- Name field -->
        <EditText
            android:id="@+id/edit_sub_name"
            android:hint="name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding ="16dp">

        <TextView
            android:text = "Date Started"
            android:paddingRight = "8dp"/>

        <!-- Date field -->
        <EditText
            android:id="@+id/edit_sub_date"
            android:hint="date (yyyy-mm-dd)"
            android:layout_height = "wrap_content"
            android:layout_width="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding ="16dp">

        <TextView
            android:text = "Monthly Charge"
            android:paddingRight = "8dp"/>

        <!-- Monthly Charge field -->
        <EditText
            android:id="@+id/edit_sub_charge"
            android:hint="monthly charge"
            android:layout_height = "wrap_content"
            android:layout_width="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding ="16dp">

        <TextView
            android:text = "Comment"
            android:paddingRight = "8dp"/>

        <!-- Comment field -->
        <EditText
            android:id="@+id/edit_sub_comment"
            android:layout_height = "wrap_content"
            android:layout_width="match_parent"
            android:hint = "comment"
            />
    </LinearLayout>

    <!-- Submit field -->
    <Button
        android:id="@+id/edit_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        />

</LinearLayout>